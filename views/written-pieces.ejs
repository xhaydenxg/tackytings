<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="public/css/styles.css">
</head>
<body>
    <%- include('partials/navbar1.ejs') %>
    <h2 class="article-title">Written Pieces</h2>
    <div class="subtitle">
        <p class="playfair-italic"> Articles/essays written by yours truly.</p>
    </div>
    <div class="blog-grid">
        <!-- Iterate over blogs array -->
        <% blogs.forEach(blog => { %>
                <div class="blog-item">
                    <a href="/written-piece-details/<%= blog.id %>">
                        <% if (blog.image) { %>
                            <img src="/images/<%= blog.image %>" alt="<%= blog.title %>">
                        <% } %>
                        <h4><%= blog.title %></h4>
                    </a>
                </div>
        <% }) %>
    </div>
    <%- include('partials/footer.ejs') %>
</body>
</html>